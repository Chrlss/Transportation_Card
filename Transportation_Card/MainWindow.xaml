<Window x:Class="Transportation_Card.MainWindow"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transportation_Card"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="700" 
        Background="#eeeeee" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ui:TextBlock Grid.Row="0" 
                      Grid.Column="0" 
                      Grid.ColumnSpan="2" 
                      Text="Username" 
                      Width="70" Height="20"  
                      VerticalAlignment="Stretch" 
                      HorizontalAlignment="Stretch"
                      Margin="0, 0, 175, 255"
                      FontSize="15"/>
        <ui:TextBox Grid.Row="0" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    Name="txtUsername" 
                    Width="250" 
                    Height="35" 
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch"
                    Margin="0, 0, 0, 200"/>

        <ui:TextBlock Grid.Row="0" 
                      Grid.Column="0" 
                      Grid.ColumnSpan="2" 
                      Text="Password" 
                      Width="65" 
                      Height="20" 
                      VerticalAlignment="Stretch" 
                      HorizontalAlignment="Stretch" 
                      Margin="0, 0, 180, 125" 
                      FontSize="15"/>
        <ui:PasswordBox Grid.Row="0" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="2" 
                        Name="txtPassword"
                        Width="250" 
                        Height="35" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch" 
                        Margin="0, 0, 0, 70"/>

        <Button Content="Login" 
                Grid.Row="0" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="#e69138"
                Width="250"
                Height="35"
                FontSize="5"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Margin="0, 60, 0, 0"
                Click="Login_Click"
                IsDefault="True"/>

        <TextBlock 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="2"
                            Width="120"
                            Height="20"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Margin="0, 200, 0, 60">
            <Hyperlink Click="Hyperlink_Click">
                Create an account?
            </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
